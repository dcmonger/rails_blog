<% content_for :title do  %>
    Ruby on Rails Tutorial Sample App | Sign up
<% end %>
<div class="row">
    <div class="large-6 large-offset-3">
        <h1>Sign up</h1>
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :email %>
            <%= f.text_field :email %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation %>
            <%= f.submit "Create my account", class: "button large" %>
        <% end %>
    </div>
</div>

